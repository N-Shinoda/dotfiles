{
    "suggest.triggerAfterInsertEnter": true,
    "suggest.noselect": false,
    "suggest.minTriggerInputLength": 2,
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.snippetIndicator": " â–º",
    "suggest.enablePreview": true,
    "coc.preference.hoverTarget": "float",
    "coc.preference.formatOnType": true,
    "coc.preference.formatOnSaveFiletypes": [
        "typescript",
        "typescriptreact",
        "javascript",
        "javascriptreact"
    ],
    "tsserver.formatOnType": true,
    "eslint.autoFixOnSave": true,
    "eslint.filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],

    "jedi": {
        "enable": true,
        "startupMessage": false,
        "evecutable.command": "jedi-language-server"
    },

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp"],
            "rootPatterns": [".ccls", ".ccls-root", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls-cache"
                },
                "compilationDatabaseDirectory": ""
            },
            "capabilities": {
                "workspace": {
                    "symbol": {
                        "dynamicRegistration": true
                    }
                }
            }
        }
    }
}
